                <h4>Price : 3600</h4>
                <h4>Saver's Badges : 100</h4>
                <button type="submit">Add to Cart</button>
            </div>
        </form>
        <form action="/add_item" class="box" style="height: fit-content;">
            <div class="div-content">
                <p>Blue Polka Dot Dress</p>
                <div class="box-img" style="background-image: url('images/dress.png');"></div>
                <h4>Price : 1000</h4>
                <h4>Saver's Badges : 5</h4>
                <button type="submit">Add to Cart</button>
            </div>
        </form>
        <form action="/add_item" class="box" style="height: fit-content;">
            <div class="div-content">
                <p>Smart Watch</p>
                <div class="box-img" style="background-image: url('images/watch.png'); object-fit:cover ;"></div>
                <h4>Price : 3600</h4>
                <h4>Saver's Badges : 10</h4>
                <button type="submit">Add to Cart</button>
            </div>
        </form>

         

        <form action="/add_item" class="box" style="height: fit-content;">
            <div class="div-content" >
                <p>Water Bottle</p>
                <div class="box-img" style="background-image: url('images/bottle.png');"></div>
                <h4>Price : 60</h4>
                <h4>Saver's Badges : 0</h4>
                <button type="submit">Add to Cart</button>
            </div>

        </form>

        <form action="/add_item" class="box" style="height: fit-content;">
            <div class="div-content" >
                <p>Notebooks</p>
                <div class="box-img" style="background-image: url('images/notebook.png');"></div>
                <h4>Price : 150</h4>
                <h4>Saver's Badges : 1</h4>
                <button type="submit">Add to Cart</button>
            </div>
        </form>

        <div class="box" style="height: fit-content;">
            <div class="div-content">
                <p>Medicine</p>
                <div class="box-img" style="background-image: url('images/medicine.png');"></div>
                <h4>Price : 320</h4>
                <h4>Saver's Badges : 2</h4>
                <button type="submit">Add to Cart</button>
            </div>
        </div>

        <div class="box" style="height: fit-content;">
            <div class="div-content">
                <p>Bag</p>
                <div class="box-img" style="background-image: url('images/bag.png');"></div>
                <h4>Price : 6000</h4>
                <h4>Saver's Badges : 20</h4>
                <button type="submit">Add to Cart</button>
            </div>
        </div>
    </div>


    <%- include("partials/footer.ejs") %>

    <script src="https://cdn.botpress.cloud/webchat/v1/inject.js"></script>
<script src="https://mediafiles.botpress.cloud/c629ece7-9900-463e-bfee-d78dd0720e97/webchat/config.js" defer></script>

</body>

</html>